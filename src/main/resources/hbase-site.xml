    <property>
        <name>hbase.client.scanner.timeout.period</name>
        <value>900000</value> <!-- 900 000, 15 minutes -->
    </property>
    <property>
        <name>hbase.rpc.timeout</name>
        <value>900000</value> <!-- 15 minutes -->
    </property>
    <property>
        <name>hbase.client.keyvalue.maxsize</name>
        <value>0</value>
    </property>
</configuration>